<!DOCTYPE html>
<html>
<head>
    <title>vk-auth</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
          integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
            integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
            crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

    <style>
        .thumbnail {
        }
    </style>
</head>
<body>
<% if (!user) { %>
<div class="container">
    <h2>Please log in.</h2>
    <p><a href="/auth/vk" class="btn btn-primary" role="button">Log in with VK</a></p>
</div>
<% } else { %>
<div class="container">
    <div class="row">
        <div class="col-sm-2 col-md-3"></div>
        <div class="col-sm-8 col-md-6">
            <div class="thumbnail">
                <img src="<%= user.img['photo_' + user.img.height] %>">
                <div class="caption">
                    <h3> <%= user.displayName %> </h3>
                    <p>
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>First name</th>
                            <th>Last name</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% user.friends.forEach(function (elem) { %>
                        <tr>
                            <td><%= elem.firstName %></td>
                            <td><%= elem.lastName %></td>
                        </tr>
                        <% }) %>
                        </tbody>
                    </table>
                    </p>
                    <p><a href="/logout" class="btn btn-primary" role="button">LogOut</a></p>
                </div>
            </div>
        </div>
        <div class="col-sm-2 col-md-3"></div>
    </div>
</div>

<% } %>

</body>
</html>